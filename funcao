function number2(conjunto){
    let b = [(conjunto[0]/2), (conjunto[conjunto.length-1]/2)];
    //b[0] = conjunto[0]/2;
   //b[1] = conjunto[1]/2;
    return b;
}

const numeros = [1, 2, 3, 4, 8];
console.log(number2(numeros));
